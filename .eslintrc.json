{
    "env": {
        "browser": true,
        "es2020": true,
        "greasemonkey": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "ecmaFeatures": {
            "shippedProposals": true,
            "classStaticBlock": true
        },
        "requireConfigFile" : "false",
        "babelOptions": {
            //"configFile": "./.babelrc"
        }
    },
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4],
        "operator-linebreak": ["error", "before"]
    },
    "ignorePatterns": ["output/*.js"]
}
